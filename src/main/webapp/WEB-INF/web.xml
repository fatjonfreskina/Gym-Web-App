<?xml version="1.0" encoding="UTF-8"?>
<web-app id="GWA-Gym-webapp" version="5.0" xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">

    <display-name>GWA Project</display-name>
    <description>
        Group project developed by GWA group of the Web Applications 2021/22 course,
        for the Computer Engineering master degree of University of Padua.
    </description>

    <!-- Filters -->
    <filter>
        <filter-name>TrainerFilter</filter-name>
        <filter-class>filter.TrainerFilter</filter-class>
    </filter>
    <filter>
        <filter-name>TraineeFilter</filter-name>
        <filter-class>filter.TraineeFilter</filter-class>
    </filter>
    <filter>
        <filter-name>SecretaryFilter</filter-name>
        <filter-class>filter.SecretaryFilter</filter-class>
    </filter>
    <filter>
        <filter-name>PersonalInfoFilter</filter-name>
        <filter-class>filter.PersonalInfoFilter</filter-class>
    </filter>

    <!-- Filters Mapping -->
    <filter-mapping>
        <filter-name>TrainerFilter</filter-name>
        <url-pattern>/trainer/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>TraineeFilter</filter-name>
        <url-pattern>/trainee/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SecretaryFilter</filter-name>
        <url-pattern>/secretary/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PersonalInfoFilter</filter-name>
        <url-pattern>/personal_info</url-pattern>
    </filter-mapping>

    
    <!-- Servlets listing -->
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <jsp-file>/jsp/home.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>StaffServlet</servlet-name>
        <servlet-class>servlet.StaffServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PricesServlet</servlet-name>
        <servlet-class>servlet.PricesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CalendarServlet</servlet-name>
        <servlet-class>servlet.CalendarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrainerServlet</servlet-name>
        <servlet-class>servlet.TrainerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasswordForgotServlet</servlet-name>
        <servlet-class>servlet.auth.PasswordForgotServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasswordChangeServlet</servlet-name>
        <servlet-class>servlet.auth.PasswordChangeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>servlet.access.RegisterServlet</servlet-class>
        <multipart-config>
            <max-file-size>5242880</max-file-size><!-- 5MB -->
            <max-request-size>10485760</max-request-size><!-- 10 MB-->
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>PersonalInfoServlet</servlet-name>
        <servlet-class>servlet.PersonalInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AboutUsServlet</servlet-name>
        <jsp-file>/jsp/aboutus.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ConfirmRegistrationServlet</servlet-name>
        <servlet-class>servlet.access.ConfirmRegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TheGymServlet</servlet-name>
        <servlet-class>servlet.TheGymServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CoursesServlet</servlet-name>
        <servlet-class>servlet.CoursesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.access.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlet.access.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SecretaryServlet</servlet-name>
        <servlet-class>servlet.secretary.SecretaryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCoursesServlet</servlet-name>
        <servlet-class>servlet.secretary.AddCoursesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TraineeServlet</servlet-name>
        <servlet-class>servlet.trainee.TraineeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagesSubscriptionServlet</servlet-name>
        <servlet-class>servlet.secretary.ManagesSubscriptionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAllLectureTimeSlot</servlet-name>
        <servlet-class>servlet.secretary.rest.GetAllLectureTimeSlot</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteLectureTimeSlot</servlet-name>
        <servlet-class>servlet.secretary.rest.DeleteLectureTimeSlot</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditLectureTimeSlot</servlet-name>
        <servlet-class>servlet.secretary.rest.EditLectureTimeSlot</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddAccountServlet</servlet-name>
        <servlet-class>servlet.secretary.AddAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageRolesServlet</servlet-name>
        <servlet-class>servlet.secretary.ManageRolesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListLikePersonServlet</servlet-name>
        <servlet-class>servlet.secretary.rest.ListLikePersonsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimeSchedulesServlet</servlet-name>
        <servlet-class>servlet.secretary.rest.TimeSchedulesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddSubscriptionServlet</servlet-name>
        <servlet-class>servlet.secretary.rest.AddSubScriptionServlet</servlet-class>
    </servlet>

    <!-- Mapping between servlets and URIs -->
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TheGymServlet</servlet-name>
        <url-pattern>/the_gym</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StaffServlet</servlet-name>
        <url-pattern>/staff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PricesServlet</servlet-name>
        <url-pattern>/prices</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CalendarServlet</servlet-name>
        <url-pattern>/calendar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrainerServlet</servlet-name>
        <url-pattern>/trainer</url-pattern>
        <url-pattern>/trainer/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TraineeServlet</servlet-name>
        <url-pattern>/trainee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasswordForgotServlet</servlet-name>
        <url-pattern>/password_forgot</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasswordChangeServlet</servlet-name>
        <url-pattern>/password_change</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PersonalInfoServlet</servlet-name>
        <url-pattern>/personal_info</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AboutUsServlet</servlet-name>
        <url-pattern>/aboutus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmRegistrationServlet</servlet-name>
        <url-pattern>/confirm_registration/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CoursesServlet</servlet-name>
        <url-pattern>/courses</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SecretaryServlet</servlet-name>
        <url-pattern>/secretary</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCoursesServlet</servlet-name>
        <url-pattern>/secretary/addcourses</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagesSubscriptionServlet</servlet-name>
        <url-pattern>/secretary/managessubscription</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAllLectureTimeSlot</servlet-name>
        <url-pattern>/secretary/rest/getalllecturetimeslot</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteLectureTimeSlot</servlet-name>
        <url-pattern>/secretary/rest/deletelecturetimeslot</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditLectureTimeSlot</servlet-name>
        <url-pattern>/secretary/rest/editlecturetimeslot</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddAccountServlet</servlet-name>
        <url-pattern>/secretary/addaccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageRolesServlet</servlet-name>
        <url-pattern>/secretary/manageroles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListLikePersonServlet</servlet-name>
        <url-pattern>/secretary/rest/listlikepersons</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimeSchedulesServlet</servlet-name>
        <url-pattern>/secretary/rest/timeschedules</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddSubscriptionServlet</servlet-name>
        <url-pattern>/secretary/rest/addsubscription</url-pattern>
    </servlet-mapping>
    
    <!-- Listener called when the application is initialized -->
    <listener>
        <listener-class>jobs.InitListener</listener-class>
    </listener>

    <welcome-file-list>
        <welcome-file>jsp/home.jsp</welcome-file>
    </welcome-file-list>
</web-app>