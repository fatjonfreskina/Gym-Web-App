    <!-- Filters ORDER IS IMPORTANT -->
    <filter>
        <filter-name>LoggedInRequireAreaFilter</filter-name>
        <filter-class>filter.RestrictedAreaFilter</filter-class>
    </filter>
    <filter>
        <filter-name>TrainerFilter</filter-name>
