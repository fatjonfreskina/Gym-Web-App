    <!-- Filters Mapping -->
    <filter-mapping>
        <filter-name>LoggedInRequireAreaFilter</filter-name>
        <url-pattern>/trainer/*</url-pattern>
        <url-pattern>/rest/trainer/*</url-pattern>
        <url-pattern>/rest/trainee/*</url-pattern>

        <url-pattern>/trainee/*</url-pattern>
        <url-pattern>/secretary/*</url-pattern>

        <url-pattern>/personal_info</url-pattern>
        <url-pattern>/avatar</url-pattern>

    </filter-mapping>
    <filter-mapping>
        <filter-name>TrainerFilter</filter-name>
        <url-pattern>/trainer/*</url-pattern>
        <url-pattern>/rest/trainer/*</url-pattern>
        <url-pattern>/rest/trainee/*</url-pattern> <!--TRAINER CAN ACCESS TRAINEE RESOURCE-->
    </filter-mapping>

